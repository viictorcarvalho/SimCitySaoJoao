<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".produto.produtoCadastrado.ProdutoCadastradoFragment">

        <TextView
            android:id="@+id/tvListaProduto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="@dimen/text_size_20"
            android:layout_margin="@dimen/margem_16"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/produtos_cadastrados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListaProduto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margem_0"
            android:layout_margin="@dimen/margem_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvListaProduto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
