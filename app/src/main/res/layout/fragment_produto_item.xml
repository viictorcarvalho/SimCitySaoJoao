<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margem_16" >

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCarrinho"
            android:layout_width="@dimen/largura_50"
            android:layout_height="@dimen/altura_50"
            android:layout_margin="@dimen/margem_8"
            android:src="@drawable/carrinho"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProduto"
            android:layout_width="@dimen/margem_0"
            android:layout_height="wrap_content"
            android:text="@string/quantidade_produto"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/margem_25"
            app:layout_constraintBottom_toBottomOf="@id/ivCarrinho"
            app:layout_constraintStart_toEndOf="@id/ivCarrinho"
            app:layout_constraintTop_toTopOf="@id/ivCarrinho" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>